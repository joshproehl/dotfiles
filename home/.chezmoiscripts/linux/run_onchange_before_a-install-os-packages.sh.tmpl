sudo pacman -S --needed inotify-tools

echo "+++ Installing dependencies for asdf-erlang..."
sudo pacman -S --needed base-devel
sudo pacman -S --needed ncurses glu mesa wxwidgets-gtk3 webkit2gtk libpng libssh

