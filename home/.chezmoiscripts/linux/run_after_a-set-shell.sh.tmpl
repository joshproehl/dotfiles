#!/usr/bin/env bash

if [ $(getent passwd `whoami` | awk -F: '{print $NF}') == $(which zsh) ]; then
  echo "[+=+] ZSH is already the default shell [+=+]"
else
  echo "[+++] Setting default shell to ZSH [+++]"
  # Ensure we're defaulting to ZSH as our shell
  chsh -s $(which zsh)
  echo "[===] Done setting default shell [===]"
fi
